<div class="user_form">
    <h1 class="text-center">Welcome Back!</h1>
    <%= form_with( scope: :session, url: signin_path, data:{turbo: false},
         local: true, class:"form_con") do |f| %>
        
          <div class="form_box username_box">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder:"Enter username"  %>
          </div>
    
          <div class="form_box password_box">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder:"Enter Password"  %>
          </div>
    
          
            <%= f.submit "Sign in" , class:"sign_btn" %>
          
        <% end %> 
        
        <div class="social-login">
          <div class="divider">
            <span>OR</span>
          </div>
          
          <%= button_to '/auth/github', method: :post, class: 'social-btn github' do %>
            <i class="fa-brands fa-github"></i> Sign in with GitHub
          <% end %>
          
          <%= button_to '/auth/google_oauth2', method: :post, class: 'social-btn google' do %>
            <i class="fa-brands fa-google"></i> Sign in with Google
          <% end %>
        </div>
    </div> 